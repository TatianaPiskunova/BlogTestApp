@model AddPostViewModel


<style>
    body {
        background-color: #E4E4D8;
    }

    .reg {
        background-color: #E4AF9D;
        color: white;
        margin-top: 20px;
    }
</style>



<h4>Новый пост</h4>
<hr />

<div class="row">
    <div class="col">
        <form method="post" asp-controller="Post" asp-action="AddPost" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" value="@User.Identity.Name" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="TitlePost" class="control-label"></label>
                <input asp-for="TitlePost" class="form-control" />
                <span asp-validation-for="TitlePost" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="TextPost" class="control-label"></label>
                <textarea asp-for="TextPost" class="form-control"></textarea>
                <span asp-validation-for="TextPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" accept="image/png;image/jpeg;image/webp" class="form-control" />
                <span asp-validation-for="Image"></span>
            </div>


            <div class="form-group  d-grid">
                <input type="submit" value="Опубликовать пост" class="btn reg" />
            </div>
        </form>
        <br />
        <a asp-controller="Home" asp-action="Index" class="btn reg d-grid">Отмена</a>
    </div>
</div>
